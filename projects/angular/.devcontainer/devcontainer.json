{
  "name": "Dev Container",
  "remoteUser": "node",
  "workspaceFolder": "/devcontainer/workspaces",
  "build": {
    "dockerfile": "dockerfile",
    "context": ".",
    "args": {
      "IMAGE_VERSION": "18-bullseye"
    }
  },
  "containerEnv": {
    "CONTAINER_FOLDER": "/devcontainer",
    "CONTAINER_SETTINGS_FOLDER": "/devcontainer/.devcontainer",
    "REPOS": "/devcontainer/repos"
  },
  "onCreateCommand": "cd $CONTAINER_FOLDER && npx dcm dc-event onCreate ${devcontainerId} && cd $CONTAINER_SETTINGS_FOLDER && pnpm run --silent dc-onCreateCommand",
  "updateContentCommand": "cd $CONTAINER_FOLDER && dcm dc-event updateContent ${devcontainerId} && cd $CONTAINER_SETTINGS_FOLDER && pnpm run --silent dc-updateContentCommand",
  "postCreateCommand": "cd $CONTAINER_FOLDER && dcm dc-event postCreate ${devcontainerId} && cd $CONTAINER_SETTINGS_FOLDER && pnpm run --silent dc-postCreateCommand",
  "postAttachCommand": "cd $CONTAINER_FOLDER && dcm dc-event postAttach ${devcontainerId} && cd $CONTAINER_SETTINGS_FOLDER && pnpm run --silent dc-postAttachCommand",
  "postStartCommand": "cd $CONTAINER_FOLDER && dcm dc-event postStart ${devcontainerId} && cd $CONTAINER_SETTINGS_FOLDER && pnpm run --silent dc-postStartCommand",
  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "customizations": {
    "vscode": {
      "settings": {
        "git.defaultCloneDirectory": "/devcontainer/repos",
        "git.pullTags": false,
        "git.autofetch": "all",
        "terminal.integrated.scrollback": 10000,
        "cSpell.words": [
          "entrypoints",
          "loadbalancer",
          "middlewares",
          "stripprefix",
          "traefik",
          "letsencrypt",
          "linq",
          "pnpm",
          "devcontainer"
        ]
      },
      "extensions": [
        "42Crunch.vscode-openapi",
        "Angular.ng-template",
        "christian-kohler.npm-intellisense",
        "christian-kohler.path-intellisense",
        "cyrilletuzi.angular-schematics",
        "dbaeumer.vscode-eslint",
        "donjayamanne.githistory",
        "EditorConfig.EditorConfig",
        "esbenp.prettier-vscode",
        "formulahendry.auto-rename-tag",
        "formulahendry.auto-close-tag",
        "GitHub.copilot",
        "GitHub.vscode-pull-request-github",
        "heaths.vscode-guid",
        "hediet.vscode-drawio",
        "johnpapa.vscode-peacock",
        "mikestead.dotenv",
        "ms-azuretools.vscode-docker",
        "ms-vscode-remote.remote-containers",
        "redhat.vscode-xml",
        "redhat.vscode-yaml",
        "segerdekort.angular-cli",
        "streetsidesoftware.code-spell-checker",
        "yoavbls.pretty-ts-errors"
      ]
    }
  }
}
