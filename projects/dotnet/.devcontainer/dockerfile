ARG IMAGE_VERSION=latest
FROM mcr.microsoft.com/devcontainers/dotnet:${IMAGE_VERSION}

USER vscode

RUN sudo mkdir -p /devcontainer \
    && sudo mkdir -p /commandhistory \
    && mkdir -p $HOME/.npm \
    && mkdir -p $HOME/.pnpm-store \
    && mkdir -p $HOME/.cache/yarn \
    && mkdir -p $HOME/.nuget

RUN curl https://raw.githubusercontent.com/creationix/nvm/master/install.sh | bash \
    && export NVM_DIR="/usr/local/share/nvm" \
    && [ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh" \
    && [ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"

SHELL ["/bin/bash", "-c"]
ENV NVM_DIR="/usr/local/share/nvm"

RUN source $NVM_DIR/nvm.sh \
    && nvm install 18.18.0 \
    && npm i --location=global npm yarn pnpm @cpdevtools/dcman-cli \
    && pnpm config set store-dir $HOME/.pnpm-store \
    && nvm install 16.18.1 \
    && npm i --location=global pnpm @cpdevtools/dcman-cli \
    && pnpm config set store-dir $HOME/.pnpm-store \
    && nvm use 18.18.0

# RUN source $NVM_DIR/nvm.sh \
#     && nvm install 16.18.1 \
#     && npm i --location=global npm yarn pnpm @cpdevtools/dcman-cli \
#     && pnpm config set store-dir $HOME/.pnpm-store

