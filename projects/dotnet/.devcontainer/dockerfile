# RUN curl https://raw.githubusercontent.com/creationix/nvm/master/install.sh | bash \
#     && export NVM_DIR="/usr/local/share/nvm" \
#     && [ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh" \
#     && [ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion" \
