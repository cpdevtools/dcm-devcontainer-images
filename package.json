{
  "name": "dcm-images-devcontainers",
  "version": "0.0.1-rc.0",
  "description": "",
  "scripts": {
    "prepare": "run-s prepare:*",
    "prepare:husky": "husky install",
    "prepare:remove-tags": "pnpm run remove-tags",
    "remove-tags": "git tag | xargs git tag -d",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier --write --ignore-unknown .",
    "pre-commit": "run-s pre-commit:*",
    "pre-commit:gen-workflows": "pnpm run gen-workflows && git add .github/workflows",
    "pre-commit:tags": "pnpm run remove-tags",
    "reset-hard": "git clean -dfx && git reset --hard && pnpm i --force",
    "gen-workflows": "ts-node --project=./tsconfig.json ./.scripts/generate-workflows.ts"
  },
  "keywords": [],
  "devDependencies": {
    "@cpdevtools/lib-node-utilities": "^0.4.56",
    "@devcontainers/cli": "^0.51.2",
    "husky": "^8.0.3",
    "i": "^0.3.7",
    "lint-staged": "^14.0.1",
    "npm": "^10.1.0",
    "npm-run-all2": "^6.0.6",
    "prettier": "^3.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "lint-staged": {
    "*": "prettier --write --ignore-unknown"
  }
}
